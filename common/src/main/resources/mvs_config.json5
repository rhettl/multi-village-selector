// ===========================================
//  Multi Village Selector (MVS) v0.4.0
//  Minimal Test Config
// ===========================================
//
// ðŸ”¥ This is a v0.4.0 config with placement control support
//
// ðŸ“– For complete documentation, see:
//    https://github.com/RhettL/multi-village-selector/blob/master/docs/Configuration.md
//
// ===========================================

{
  enabled: true,
  show_first_launch_message: true,

  // Block structure_sets entirely (executed first)
  block_structure_sets: [
    // Empty for now
  ],

  // Intercept these structure_sets (MVS takes control)
  intercept_structure_sets: [
    "minecraft:villages"
  ],

  // Structure pool - MVS selects from this list
  // biomes controls spawn weights per biome (same pattern system as biome_frequency)
  //
  // Supports: Direct IDs ("minecraft:plains": 10), Tags ("#minecraft:is_plains": 10), Patterns ("minecraft:*": 5)
  // Specificity: More specific patterns win, literal IDs beat tags, tie-breaker = higher weight
  // TIP: Use /mvs generate to populate automatically
  structure_pool: [
    // Vanilla villages with explicit biome tags
    { structure: "minecraft:village_plains",
      biomes: {
        "#minecraft:has_structure/village_plains": 1
      } },
    { structure: "minecraft:village_desert",
      biomes: {
        "#minecraft:has_structure/village_desert": 1
      } },
    { structure: "minecraft:village_savanna",
      biomes: {
        "#minecraft:has_structure/village_savanna": 1
      } },
    { structure: "minecraft:village_taiga",
      biomes: {
        "#minecraft:has_structure/village_taiga": 1
      } },
    { structure: "minecraft:village_snowy",
      biomes: {
        "#minecraft:has_structure/village_snowy": 1
      } },
  ],

  // ## Biome-specific spawn frequency (0.0-1.0, applied before structure selection)
  // Controls % chance of structure spawn attempt per biome
  //
  // Supports three formats:
  // 1. Direct biome ID: "minecraft:plains": 1.0 (most specific, easiest for beginners)
  // 2. Biome tags: "#minecraft:is_ocean": 0.2 (affects all matching biomes)
  // 3. Patterns: "minecraft:*": 0.7, "#terralith:*": 0.85 (wildcards supported)
  //
  // Specificity scoring (more specific wins):
  // - Base: 20, No #: +1, Literals before colon: +2, Literals after colon: +2, Each *: -5
  // - Examples: "minecraft:plains" = 25, "#minecraft:is_plains" = 24, "#*craft*:*village*" = 4, "*:*" = -10
  // - Tie-breaker: Higher frequency value wins
  biome_frequency: {
    // "*:*": 1.0,                      // Default: 100% spawn rate (implied if not set)
    // "minecraft:warm_ocean": 0.5,     // Warm ocean specifically: 50% spawn rate
    // "#minecraft:is_ocean": 0.2,      // All ocean biomes: 20% spawn rate
    // "#terralith:*": 0.85,            // All Terralith biomes: 85% spawn rate
  },

  // Blacklist specific structures from non-intercepted sources
  blacklisted_structures: [
    // Empty for now
  ],

  // v0.4.0: Override structure placement (spacing, separation, salt, spreadType)
  // Use /mvs config fill-placements to populate with registry values
  placement: {
    "minecraft:villages": {},  // Empty = inherit from registry
  },

  // v0.4.0: Relaxed biome validation
  // When false (default): vanilla validates biome at structure's bounding box center.
  //   Works well for vanilla-sized structures but may reject large mod structures
  //   (BCA, etc.) whose bounding box center lands in a different biome than chunk center.
  // When true: bypass vanilla's biome check and trust MVS's chunk-center selection.
  //   Recommended for modpacks with large village structures (BCA, CTOV large, etc.)
  relaxed_biome_validation: false,

  // ## Debugging functionality
  // Auto-enabled in dev environments (mod-dev directory, IDE, etc.)
  debug_cmd: false,
  debug_logging: false
}
