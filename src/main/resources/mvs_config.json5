{
  enabled: true,
  debug_logging: false,
  show_launch_message: true,

  // Vanilla villages to replace
  replace_of: [
    "minecraft:village_plains",
    "minecraft:village_desert",
    "minecraft:village_savanna",
    "minecraft:village_snowy",
    "minecraft:village_taiga",
  ],

  // Prevent other villages from spawning (add your modded villages here)
  prevent_spawn: [
    // Example:
    // "ctov:*/*",
    // "towns_and_towers:village_*",
  ],

  // Replacement villages by biome category
  replace_with: {
    // Example - replace with variety from your installed mods
    // Use /mvs generate to auto-populate this!

    plains: [
      { structure: "minecraft:village_plains", weight: 10 },
    ],
    desert: [
      { structure: "minecraft:village_desert", weight: 10 },
    ],
    savanna: [
      { structure: "minecraft:village_savanna", weight: 10 },
    ],
    snowy: [
      { structure: "minecraft:village_snowy", weight: 10 },
    ],
    taiga: [
      { structure: "minecraft:village_taiga", weight: 10 },
    ],
    jungle: [],      // No vanilla jungle villages - add modded villages here
    swamp: [],       // No vanilla swamp villages - add modded villages here
    beach: [],       // No vanilla beach villages - add modded villages here
    dark_forest: [], // No vanilla dark forest villages - add modded villages here
    ocean: [],       // No villages in oceans by default
    mushroom: [],    // No villages in mushroom biomes by default
    cave: [],        // Cave biomes - keep empty (villages sample at surface level)


    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // Custom categories and fallback behavior:
    //
    // If a biome maps to an UNDEFINED category (not listed above),
    // it will use the DEFAULT pool below.
    //
    // Example:
    //   custom_category: [
    //     { structure: "mod:custom_village", weight: 10 },
    //   ],
    //
    // Then in biome_category_overrides:
    //   "modname:weird_biome": "custom_category"
    //
    // Note: Empty list [] means "no villages", not defined means "use DEFAULT"
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

    DEFAULT: [
      { structure: "minecraft:village_plains", weight: 10 },
    ],
  },

  // Override biome categorization (optional)
  biome_category_overrides: {
    // Example:
    // "terralith:volcanic_peaks": "snowy",
    // "biomesoplenty:lavender_field": "plains",
  },
}
